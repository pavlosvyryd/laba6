@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title><Банк</title>
    <style>
        h1{
            text-align: center;
        }
        table{
            border: 10px solid black;
        }

        th{padding: 5px;border: 3px solid black;} 
        td{padding: 5px;border: 3px solid black;}
        a {
            color: green;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div style="width: 500px; margin: 0 auto;">
        <h1>Взяти кредит</h1>
        <table>
            <tr>
                <th><p>Банк №</p></th>
                <th><p>Назва банку</p></th>
                <th><p>Кількість клієнтів</p></th>
                <th></th>
            </tr>
            @foreach (var b in ViewBag.Banks)
            {
                <tr>
                    <td><p>@b.bank_id</p></td>
                    <td><p>@b.bank_name</p></td>
                    <td><p>@b.bank_amount_of_clients</p></td>
                    <td><p><a href="/Home/Buy/@b.bank_id"><b>Взяти кредит</b></a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>