@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Кредит</title>
    <style>
        h1 {
            text-align: center;
        }

        table {
            border: 10px solid black;
        }

        th {
            padding: 5px;
            border: 3px solid black;
        }

        td {
            padding: 5px;
            border: 3px solid black;
        }

        a {
            color: green;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div style="width: 500px; margin: 0 auto;">
        <h1>Форма оформлення кредиту</h1>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.bank_id" name="bank_id" />
            <table>
                <tr>
                    <td><p>Введіть країну: </p></td>
                    <td><input type="text" name="country_name" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть суму кредиту :</p></td>
                    <td>
                        <input type="number" name="bank_credit" />
                    </td>
                </tr>
                <tr><td><input type="submit" value="Відправити" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>